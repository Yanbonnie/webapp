.title{
    position: fixed;
    bottom: 90%;
    height: 80rpx;
    line-height: 80rpx;
    background: #dedede;
    width: 100%;
    display: block;
    text-align: right;
    z-index: 1;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
    overflow: hidden;
}
.title text{
    padding: 0 20rpx;
}
.select_txt{
    float: left;
    font-size: 28rpx;
}
.city_left {
    flex: 1;
}

.city_right {
    width: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height:85%;
    position: fixed;
    right: 0;
    bottom: 0;
    top: 12.5%;
}

.letter_item {
    flex: 1;
    display: block;
    font-size: 22rpx;
    color: #33b9ff;
    text-align: center;
}

.city_locate, .national {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #efefef;
    font-size: 28rpx;
    color: #333;
    padding-left: 25rpx;
}

.city_locate_title {
    color: #999;
    margin-right: 20rpx;
}
.new_city {
    background: #efefef;
    font-size: 28rpx;
}
.new_city_title {
    line-height: 50rpx;
    color: #999;
    padding-left: 25rpx;
    margin-bottom: 20rpx;
}

.new_city_box {
    display: flex;
    flex-wrap: wrap;
}

.new_city_text {
    width: 200rpx;
    text-align: center;
    line-height: 70rpx;
    background: #fff;
    border-radius: 35rpx;
    margin: 0 0 22rpx 22rpx;
}

.city_first_letter {
    line-height: 40rpx;
    height: 40rpx;
    padding-left: 25rpx;
    font-size: 28rpx;
    background: #eee;
    color: #999;
}

.city_name {
    display: block;
    line-height: 80rpx;
    height: 80rpx;
    border-bottom: 1px solid #efefef;
    font-size: 28rpx;
    color: #333;
    padding-left: 25rpx;
}
.city_cover_box{
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
  margin-top:-100rpx;
  background: rgba(0,0,0,0.6);
  border-radius:8rpx;
}
.city_cover_box text{
  line-height: 200rpx;
  color: #fff;
  font-size: 50rpx;
  text-align: center;
  display: block;
}