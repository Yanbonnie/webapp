/* pages/card/card.wxss */
page,.card{
    height: 100%;
}
.swiper{
    width: 100%;
    height: 100%;
}
.swiper  .slide-image{
    width: 100%;
    height: 100%;
}
.swiper .logo{
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    left: 50rpx;
    top: 50rpx;
}
.homeBox{
    display: flex;
    width: 350rpx;
    background: rgba(51,136,255,0.7);
    position: absolute;
    top: 80rpx;
    left:730rpx;
    justify-content: space-around;
    padding: 10rpx 0;
}
.homeBox .item image{
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin: 0 auto;
}
.homeBox .item text{
    display: block;
    font-size: 24rpx;
    color: #fff;
    padding-top: 10rpx;
    width: 100%;
    text-align: center;
}
.homeBox .item{
    position: relative;
     flex-grow: 1; 
}
.homeBox .item:nth-child(1){
    position: relative;
    z-index: 10;
}
.homeBox .line{
    position: absolute;
    height: 90%;
    top: 5%;
    width: 4rpx;
    background: #fff;
    left: 8rpx;
}
.homeBox .icon{
    border: 10rpx solid;
    border-color: rgba(51,136,255,0) rgba(51,136,255,0)  rgba(51,136,255,0) #fff;
    position: absolute;
    top: 50%;
    margin-top: -5rpx;
    width: 0;
    height: 0;
    left: 10rpx;
}
.homeBox .tabBob{
    width: 50rpx;
    height: 100%;
    position: absolute;
    top: 0;
    left: -25rpx;
    background:rgba(0,0,0,0);
}
.info{
    background: #38f;
    position: absolute;
    bottom: 300rpx;
    left: 10%;
    color: #fff;
    width: 60%;
    padding: 0 25rpx;
}
.info .item{
    display: flex;
    padding: 10rpx 0;
}
.info image{
    width: 45rpx;
    height: 45rpx;
}
.info  text{
    font-size: 30rpx;
}
.itme1 text{
    font-size: 36rpx;
}
.itme1 image{
    position: relative;
    top: 3rpx;
    margin-left: 5rpx;
} 
.item2 text:first-child{
    width: 50%;
    font-size: 28rpx;
}
.item2 text:last-child{
    width: 50%;
    text-align: right;
    font-size: 24rpx;
}
.item3 image{
    width: 30rpx;
    height: 30rpx;
    position: relative;
    top: 5rpx;
    margin-right: 5rpx;
}

.btnBox {
    position: absolute;
    display: flex;
    bottom: 100rpx;
    width:80%;
    left: 10%;
    justify-content:space-between;
}
.btnBox .btn{
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    padding: 0 50rpx;
    border-radius: 8rpx;
    border: 1px #1296db solid;
}
.btnBox .btn image{
    width: 50rpx;
    height: 50rpx;
    position: relative;
    top: 15rpx;
    margin-right: 20rpx;
}
