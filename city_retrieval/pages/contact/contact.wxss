/* pages/contact/contact.wxss */
page{
    background: #f1f1f1;
    height: 100%;
}
.contact {
    display: flex;
    flex-direction: column; 
    height: 100%;
    overflow: hidden;
}
.contact .c_info{
    background: #fff;
    border-bottom:1px #dedede solid;
     margin-bottom: 20rpx; 
}
.contact .c_chat{
    flex-grow: 1;
    background: #fff;
    position: relative;
}
.c_chat .chat_item {
     padding: 10rpx 20rpx; 
}
.c_chat .chat_item text{
    font-size: 28rpx;
}
.c_chat .chat_item text:nth-child(1){font-weight: bold;}
.c_chat .chat_item text:nth-child(2){margin-right: 10rpx;}
.c_chat .chat_item text:nth-child(3){
    font-size: 20rpx;
    background: #f7f7f7;
    padding: 0 10rpx;
    color: #ccc;
}
.contact .send{
    height: 100rpx;
    background: #f1f1f1;
}
.contact .c_btn{
    width: 110rpx;
    font-size: 26rpx;
    padding: 0;
    position: absolute;
    right: 25rpx;
    top: 50%;
    border: 1px #38f solid;
    height: 55rpx;
    line-height: 55rpx;
    color: #38f;
    margin-top: -27.5rpx;
}
.contact .c_item{   
    display: flex;
    height: 80rpx;
    border-bottom: 1px #dedede solid;
    margin-left: 25rpx;
}
.c_item:last-child{
    border-bottom: 0;
}
.c_item .c_item_left{
    flex-grow:1;
    align-self:center;
    font-size: 28rpx;
    display: flex;
}
.c_item .c_item_right{
    width: 60rpx;
    display: block;
    overflow: hidden;
}
.c_item .c_item_right image{
    width: 50rpx;
    height: 50rpx;
    display: block;
    position: relative;
    top: 15rpx;
}

.c_item_left .img{
    width: 30rpx;
    height: 30rpx;
}
.c_item_left .score{
    margin-left: 15rpx;
    color: #ff503f;
}

.send{
    display: flex;
}
.send .send_txt{
    height: 68rpx;
    line-height: 68rpx;
    font-size: 28rpx;
    flex-grow: 1;
    border: 1px #dedede solid;
    margin:14rpx 0 0 20rpx;
    padding-left: 20rpx;
    background: #fff;
    border-radius: 8rpx;
}
.send button{
     margin: 14rpx 10rpx 0 20rpx; 
    height: 70rpx;
    line-height:70rpx; 
    /* padding: 0; */
    font-size: 28rpx;
    display: block;
    background: #38f;
    color: #fff;
    border: 0;

}

/*分享*/
.shareCover{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);
    z-index: 10;
}
.shareCover .shareBox{
    width: 600rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    border-radius: 12rpx;
    padding: 50rpx 0;
}
.shareBox .mianContain{
    display: flex;
    justify-content: space-around;
}
.mianContain .item{
    width: 50%;
    background: none;
    margin: 0;
    padding: 0;
    box-shadow: none;
    position: static;
    border-radius: 0;
    line-height: 40rpx;
}
.mianContain .item:nth-child(1){
    border-right: 1px #dedede solid;
}
.mianContain image{
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin: 0 auto;
    padding-bottom: 15rpx;
    
}
.mianContain text{
    font-size: 28rpx;
    display: block;
    text-align: center;
}
.mianContain .txt2{
    color: #ff503f;
    font-size: 20rpx;
}