.u_info {
    background: #fff;
}
.u_info .jifen{
    width: 130rpx;
    font-size: 26rpx;
    position: absolute;
    right: 25rpx;
    top: 50%;
    border: 1px #3388ff solid ;
    color: #3388ff;
    height: 55rpx;
    line-height: 55rpx;
    margin-top: -27.5rpx;
