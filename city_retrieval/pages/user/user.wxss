.u_paner{
    margin-top: 20rpx;
    background: #fff;
}
.u_paner .item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx;
    border-bottom: 1px #f1f1f1 solid;
}
.u_paner .item .itemL{
    flex-grow: 1;
    font-size: 28rpx;
}
.u_paner .item .itemR{
