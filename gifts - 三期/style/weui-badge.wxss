.weui-badge {
    display: inline-block;
    padding: .15em .4em;
    min-width: 8px;
    border-radius: 18px;
    background-color: #F43530;
    color: #FFFFFF;
    line-height: 1.2;
    text-align: center;
    font-size: 24rpx;
    vertical-align: middle;
}

.weui-badge_dot {
    padding: .4em;
    min-width: 0;
}

.weui-badge_tag {
    border-radius: 4px;
    line-height: inherit;
}

.weui-badge.bg_jx {
    background-color: #f86363;
}
.weui-badge.bg_js {
    background-color: #38bea9;
}
.weui-badge.bg_cx {
    background-color: #5d9cec;
}