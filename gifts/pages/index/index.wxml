<import src="../template/load-more.wxml" />
<import src="../template/list.wxml" />

<view class="page" hidden="{{!contentReady}}">
    <template is="list" data="{{list: list}}"/>
</view>
<template is="loadMore" data="{{loadMoreStart: loadMoreStart, loadMoreEndingText: loadMoreEndingText}}"/>
<block wx:if="{{swiperState==1}}">
<swiper class='swiper' indicator-dots="true" indicator-active-color="#ffffff"  indicator-color="#cccccc" > 
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode='aspectFill' bindtap='goDigging' data-index="{{index}}"/>
    </swiper-item>
  </block>
</swiper>
</block>
