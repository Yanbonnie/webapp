.userlist {
    position: relative;
    width: 45.5%;
    float: left;
    border-bottom: 1px solid #e2e2ed;
    background: #fff;
    margin: 4% 0 0 3%;
    overflow: hidden;
    /*display: flex;
    flex-direction: row;
    align-items: center;*/
}

.status {
    position: absolute;
    top: 13px;
    left: -25px;
    color: #655e36;
    background: #fde763;
    font-size: 28rpx;
    padding: 3px 30px;
    transform: rotate(-45deg);
}

.disable {
    background: #cbcbcb;
}

.userlist-pic {
    width: 100%;
    height: 300rpx;
}

.userlist-pic image {
    width: 100%;
    height: 100%
}

.depth {
    background: #fde763;
    color: #655e36;
    font-size: 28rpx;
    text-align: center;
    padding: 6rpx;
}

.userlist-name {
    font-size: 34rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: flex;
    align-items: center;
}
.userlist-name image{
    width: 35rpx;
    height: 35rpx;
    margin-right:10rpx;
}
.userlist-inner {
    padding: 20rpx;
    height: 154rpx;
    overflow: hidden;
}

.userlist-num {
    font-size: 28rpx;
    margin: 0 0 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.userlist-num .flexR{
    flex-basis: 30rpx;
    
}
.userlist-num .flexR image{
        display:block;
        width: 30rpx;
        height: 30rpx;
}
.userlist-txt {
    font-size: 34rpx;
    font-style: bold;
    margin-left: 14rpx;
}

.userlist-avatar {
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
    border-radius: 50%;
    background: #f5f5fa;
}

.wxname {
    color: #939da3;
    font-size: 28rpx;
}

.userlist-bottom {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
}

.btn-userinfo {
    width: 200px;
    height: 50px;
    margin: 20px auto;
}