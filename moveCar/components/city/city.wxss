.select_txt{
    float: left;
    font-size: 28rpx;
}
.city_left {
    flex: 1;
}

.city_right {
    width: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height:85%;
    position: fixed;
    right: 0;
    bottom: 0;
    top: 12.5%;
}

.letter_item {
    flex: 1;
    display: block;
    font-size: 22rpx;
    color: #5978e3;
    text-align: center;
}

.city_locate, .national {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #efefef;
    font-size: 28rpx;
    color: #333;
    padding-left: 25rpx;
}

.city_locate_title {
    color: #999;
    margin-right: 20rpx;
}
.new_city {
    background: #fff;
    font-size: 28rpx;
}
.new_city_title {
    line-height: 50rpx;
    color: #6a6a6a;
    padding-left: 25rpx;
    margin-bottom: 20rpx;
    text-align: center;
    position: relative;
    padding-top: 10px;
}
.new_city_title text{
    font-size: 14rpx;
    background: #6a86ee;
    border-radius: 20rpx;
    color: #fff;
    line-height: 20rpx;
    padding: 3rpx 8rpx;
    top: -15px;
    left: -15px;
    position: relative;
}

.new_city_box {
    display: flex;
    flex-wrap: wrap;
    width: 90%;
    margin: 0 auto;
    padding-bottom: 10px;
}

.new_city_text {
    width: 200rpx;
    text-align: center;
    line-height: 40rpx;
    margin: 8px 0;
    background: #fff;
    color: #5a79e4;
    border-right: 1px #9ab0ff solid;
}
.new_city_text:nth-child(3n){
    border-right: 0;
}

.city_first_letter {
    line-height: 40rpx;
    height: 40rpx;
    padding-left: 25rpx;
    font-size: 24rpx;
    background: #f5f7ff;
    color: #5978e3;
    font-weight: bold;
}

.city_name {
    display: block;
    line-height: 80rpx;
    height: 80rpx;
    /* border-bottom: 1px solid #efefef; */
    font-size: 24rpx;
    color: #6a6a6a;
    padding-left: 25rpx;
}
.city_cover_box{
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
  margin-top:-100rpx;
  background: rgba(0,0,0,0.6);
  border-radius:8rpx;
}
.city_cover_box text{
  line-height: 200rpx;
  color: #fff;
  font-size: 50rpx;
  text-align: center;
  display: block;
}
.city_search{
    display: flex;
    align-items: center;
    width: 70%;
    margin:0 auto 20rpx;
}
.city_search input{
    flex-grow: 1;
    /* border: 1px #dedede solid; */
    height: 50rpx;
    box-sizing: border-box;
    padding-left: 10px;
    margin-right: 10rpx;
    background: #f5f7ff;
}
.city_search .search{
    flex-basis: 100rpx;
    height:50rpx;
    line-height: 50rpx;
    background: #5978e3;
    text-align: center;
    color: #fff;
    border-radius: 4rpx;
}