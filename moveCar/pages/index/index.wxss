/* pages/index/index.wxss */
page{
    background: #efeff4;
}
.slide-image{
    width: 100%;
    height: 400rpx;
}

.operBox{
    display: flex;
    padding: 30rpx 40rpx;
    justify-content: space-between;

}
.operBox text{
    font-size: 28rpx;   
    color: #808080; 
}
.operBox .iconfont {
    margin-right: 10rpx;
}
.operBox view:nth-child(1) text{
    color: #ff503f;
}
.operBox .icon-squarecheck{
    color: #ff503f;
}
.serverCover{
    position: fixed;
    z-index: 10;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);
}
.serverBox{
    width: 650rpx;
    height: 1000rpx;
    background: #fff;
    border-radius: 10rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -325rpx;
    margin-top: -500rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
}
.serverBox view{
    font-size: 30rpx;
    text-align: center;
}
.serverBox .title,.serverBox .bottom{
    width: 100%;
    line-height: 80rpx;
    flex-basis: 80rpx;
    display: block;
}
.serverBox .serverContain{
    flex-grow: 1;
    overflow: auto;
    align-self: flex-start;
    text-align: left;
    line-height: 60rpx;
}
.serverBox .serverContain text{
    display: block;
    padding: 0 80rpx;
    word-wrap: break-word;
    text-indent: 60rpx;
}
.serverBox .bottom{
    border-top: 1px #f5f5f5 solid;
}