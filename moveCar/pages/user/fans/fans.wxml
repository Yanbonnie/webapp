<!--pages/user/fans/fans.wxml-->


<view class='infoBox' wx:for="{{list}}" wx:key="{{index}}">
    <view class='flexL'>
        <image src='{{item.headpic}}'></image>
    </view>
    <view class='flexC'>
        <view class='name'>
            <text>{{item.wxname}}</text>
            <text class='vip vip1' wx:if="{{item.level == 1}}">普通会员</text>
            <text class='vip vip2' wx:elif="{{item.level == 2}}">升级会员</text>
            <text class='vip vip3' wx:else>省级会员</text>
        </view>
        <text class='time'>2018-07-21</text>
    </view>
</view>
