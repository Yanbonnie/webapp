<view class='infoBox' wx:for="{{list}}" wx:key="{{index}}">
    <view class='flexL'>
        <image src='{{item.headpic}}'></image>
    </view>
    <view class='flexC'>
        <view class='gold'>
            <text>金额：￥{{item.money}}</text>
            <text class='time'>{{item.time}}</text>
        </view>
    </view>
</view>

<view class='no-message' wx:if="{{list && list.length == 0}}">暂无数据</view>
