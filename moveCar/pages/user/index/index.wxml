<!--pages/user/index/index.wxml-->

<view class='infoBox'>
    <view class='flexL'>
        <image src='{{wxheadpic}}'></image>
    </view>
    <view class='flexC'>
        <view class='name'>
            <text>{{wxname}}</text>
            <text class='vip' wx:if="{{level==1}}">普通会员</text> <!--升级会员  省级会员-->
            <text class='vip vip2' wx:elif="{{level==1}}">升级会员</text> <!--升级会员  省级会员-->
            <text class='vip vip3' wx:else>省级会员</text> <!--升级会员  省级会员-->
        </view>
        <text>车牌：{{car_number}}</text>
    </view>
    <view class='flexR'>
        <text class='btn' bindtap="getShareHandle">我的二维码</text>
    </view>
</view>
<view class='navList'>
    <view class='item' bindtap='goInfoHandle'>
        <text>{{is_binding ? '我的资料':'我要绑定'}}</text>
        <text class='iconfont icon-right'></text>
    </view>
    <view class='item' bindtap='goRecordHandle'>
        <text>挪车记录</text>
        <text class='iconfont icon-right'></text>
    </view>
    <navigator class='item' url="/pages/user/fans/fans"> 
        <text>我的粉丝</text>
        <text class='iconfont icon-right'></text>
    </navigator>
    <navigator class='item' url="/pages/user/income/income"> 
        <text>收入记录</text>
        <text class='iconfont icon-right'></text>
    </navigator>
    <view class='item' bindtap='showEwmFn' data-state="1">
        <text>挪车二维码</text>
        <text class='iconfont icon-right'></text>
    </view>
</view>
 <navBar bindchangeNav="changeNav" index="{{2}}"></navBar>

 <view class='ewmCover' wx:if="{{ewmStatus}}">
    <view class='ewmBox'>
        <image class='img' mode="aspectFit" src="../../../assets/images/ewm.png"></image>
        <image bindtap='showEwmFn' data-state="0" class='close' src='../../../assets/images/close.png'></image>
        <view>点击查看大图（长按大图保存，线下打印）</view>
    </view>
 </view>

  <view class='ewmCover' wx:if="{{ewmStatus2}}">
    <view class='ewmBox'>
        <image class='img' mode="aspectFit" src="{{friendUrl}}"></image>
        <image bindtap='showEwmFn' data-state="2" class='close' src='../../../assets/images/close.png'></image>
        <view>点击查看大图（长按大图保存,分享到朋友圈）</view>
    </view>
 </view>