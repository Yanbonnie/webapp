/* pages/user/index/index.wxss */
page{
    background: #f5f5f5;
}

.infoBox{
    display: flex;
    background: #fff;
    padding: 30rpx 40rpx;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
}
.infoBox .flexL{
    flex-basis: 140rpx;
}
.infoBox .flexL image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}
.infoBox .flexR{
    flex-grow: 1;
    text-align: left;
}
.infoBox .flexR text{
    display: block;
    font-size: 24rpx;
}

.navList{
    margin-top: 20rpx;
    background: #fff;
}
.navList .item{
    border-bottom: 1px #f5f5f5 solid;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 30rpx;
}
.navList .item text{
    flex-grow: 1;
    font-size: 24rpx;

}
.navList .item text:nth-child(2){
    text-align: right;
}