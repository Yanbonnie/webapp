/* pages/user/info/info.wxss */

@import '../../apply/apply.wxss';

.BtnBox{
    display: flex;
    justify-content: space-between;
}
.BtnBox .item{
    width: 45%;
}

.operBox{
    display: flex;
    padding: 30rpx 0;
    justify-content: space-between;

}
.operBox view{
    height: 100rpx;
}
.operBox text{
    font-size: 28rpx;   
    color: #808080; 
}
.operBox .iconfont {
    margin-right: 10rpx;
}
.operBox view:nth-child(1) text{
    color: #ff503f;
}
.operBox .icon-squarecheck{
    color: #ff503f;
}


.followCover{
    position: fixed;
    z-index: 10;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);
    display: flex;
    flex-direction: column;
    justify-content:flex-start;
    align-items: center;
}
.followCover .close{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    line-height: 50rpx;
    
    color: #fff;
}
.followCover image{
    width: 750rpx;
    height: 277rpx;
}
.followCover .tip{
    font-size: 24rpx;
    padding-top: 20rpx;
}