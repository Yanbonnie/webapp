@import "/assets/css/index.wxss";

page {
    background: #efefef;
}

text, view {
    font-size: 28rpx;
}

.center image {
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin: 0 auto;
    padding-top: 150rpx;
}

.center text {
    width: 100%;
    line-height: 80rpx;
    text-align: center;
    display: block;
    font-size: 28rpx;
    color: #bfbfbf;
}

.loading {
    text-align: center;
    height: 80rpx;
    padding: 20rpx;
    margin-top: 400rpx;
}

.loading image {
    height: 100%;
}

.clf:before, .clf:after {
    content: "";
    display: table;
}

.clf:after {
    clear: both;
}

.clearfix {
    overflow: hidden;
    _zoom: 1;
}

.shengl {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.shengl2 {
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.viewBtn {
    border: 1px #38f solid;
    color: #38f;
    width: 90%;
    margin: 0 auto;
    line-height: 50rpx;
    border-radius: 8rpx;
    text-align: center;
}

.iconBtn image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 8rpx;
    position: relative;
    top: 5rpx;
}

.iconBlue {
    color: #38f;
}

.defBtn {
    border: 1px #ccc solid;
    position: static;
    padding: 0;
    margin: 0;
    line-height: 60rpx;
    font-size: 28rpx;
    background: #fff;
}

.defBlue {
    border: 1px #38f solid;
    color: #38f;
}

.fontRed {
    color: #ff503f;
}

/**/

.comFoot {
    height: 100rpx;
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    background: #4a4a4a;
}

.comFoot view {
    width: 50%;
    float: left;
    color: #fff;
    display: block;
    line-height: 100rpx;
    text-align: center;
}

.comFoot text {
    font-size: 36rpx;
}

.comFoot .active {
    color: #ff503f;
}
.comFoot .blue{
    color: #38f;
}

.blank5{
    height: 5rpx;
    background: #f1f1f1;
}


/*cover*/
.comCover{
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,0.8);
    z-index: 100;
}

.comCoverBox{
    position: absolute;
    width: 80%;
    left: 10%;
     transform: translateY(-50%); 
    top: 50%;
    background: #fff;
}
.comCoverBox .comCoverHead{
    display: flex;
    height: 80rpx;
    justify-content: space-between;
    padding: 0 20rpx;
    align-items: center;
    border-bottom: 1rpx #f1f1f1 solid;
}
.comCoverBox .comCoverHead text{
    flex-grow: 1;
}
.comCoverBox .comCoverHead image{
    width: 30rpx;
    height: 30rpx;
}
.comCoverBox .comCoverBody{
    padding: 20rpx;
}