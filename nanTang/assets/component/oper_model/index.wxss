/* assets/component/oper_model/index.wxss */

.cover{
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    background: rgba(0,0,0,0.8);
}
.cover .cover_box{
    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    background: #fff;
    border-radius: 8rpx;
    font-size: 28rpx;
}
.cover .cover_title{
    line-height: 80rpx;
    padding-left: 40rpx;
    border-bottom: 1px #ccc solid;
}
.cover_title .icon{
    float: right;
    width: 40rpx;
    height: 40rpx;
    padding: 20rpx;
}
.cover_body .title{
    padding: 40rpx;
    line-height: 40rpx;
}
.cover_body{
  padding-bottom:20rpx;
}
.mainbody {
  overflow:hidden;_zoom:1;
}
.mainbody view{
    width: 30%; 
    margin: 1.5%;
    float: left;
}
.mainbody  button{
    width:150rpx;
    display: block;
    margin: 0 auto;
    font-size: 28rpx;
    line-height: 30rpx;
    padding: 10rpx 0;
}
.tuhao_title{
  width: 100%;
  line-height: 60rpx;
  text-align: center;
  display: block;
  color: #ff503f;
}
.mainbody  button text{
  font-size: 22rpx;
}
.mainbody  text{
    width: 100%;
    display: block;
    text-align: center;
}