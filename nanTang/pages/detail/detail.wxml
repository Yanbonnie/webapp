<!--pages/search/search.wxml-->
<import src="/assets/component/actionsheet/index.wxml" />
<template is="zan-actionsheet" data="{{ ...baseActionsheet }}"></template>
<view class='container'>
    <scroll-view scroll-y="true">
        <view class='productList'>
            <view class="zan-card">
                <!-- 卡片左侧商品图片 -->
                <view class="zan-card__thumb">
                    <image class="zan-card__img" src="{{shopData.logo}}" mode="aspectFit"></image>
                </view>
                <!-- 卡片右侧详情描述 -->
                <view class="zan-card__detail">
                    <!-- 商品标题行 -->
                    <!-- 每行可以使用 zan-card__detail-row 来控制展示区域 -->
                    <!-- 每行里面可以用 zan-card__left-col zan-card__right-col 来控制左右展示 -->
                    <view class="zan-card__detail-row">
                        <view class="zan-card__left-col zan-ellipsis--l2">
                            {{shopData.name}}
                        </view>
                    </view>
                    <!-- 商品附属信息展示行 -->
                    <view class="zan-card__detail-row zan-c-gray-darker">
                        <view class="zan-card__left-col  zan-ellipsis">
                            {{shopData.address}}
                        </view>
                    </view>
                    <!-- 商品操作按钮相关 -->
                    <view class="zan-card__detail-row zan-c-gray-darker ">
                        <view class="zan-card__left-col operBox">
                            <view class="zan-icon zan-icon-contact"></view>
                            <view>{{shopData.praise}}</view>
                            <view class="zan-icon zan-icon-like-o"></view>
                        </view>
                    </view>
                </view>
                <view>
                    <button class="zan-btn zan-btn--small btn1" data-id="{{shopData.id}}" bindtap='toggleActionsheet'>拨打电话</button>
                    <button class="zan-btn zan-btn--small btn2" data-id="{{shopData.id}}" bindtap='lookMenu'>查看菜单</button>
                </view>
            </view>
        </view>
        <view class='menus'>
            <view class="zan-row">
                <view class="zan-col zan-col-8" wx:for="{{menu_pic}}" wx:key="{{index}}">
                    <image src='{{item.pic}}' data-id="{{index}}" mode="aspectFit" bindtap="previewHandle"></image>
                </view>
            </view>
        </view>
        
    </scroll-view>
</view>