/* pages/detail/detail.wxss */
@import "/pages/index/index.wxss";

.scrollWrap {
    height: calc(100% - 100rpx);
    padding-bottom: 100rpx;
}

.menus {
    padding: 25rpx;
    background: #fff;
    margin-top: -20rpx;
}

.menus .zan-col {
    margin-bottom: 20rpx;
}

.menus .zan-col image {
    width: 85%;
    display: block;
    margin: 0 auto;
    height: 200rpx;
}

.tipTitle {
    font-size: 28rpx;
    text-align: center;
    display: block;
}

.navTabBar {
    width: 100%;
    height: 102rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    border-top: 1px #ccc solid;
}

.navTabBar .zan-col {
    text-align: center;
}

.navTabBar .zan-col image {
    width: 51rpx;
    height: 51rpx;
    text-align: center;
    display: block;
    margin: 10rpx auto 0;
}

.navTabBar .zan-col text {
    text-align: center;
    font-size: 24rpx;
    color: #8a8a8a;
    line-height: 20rpx;
    position: relative;
    top: -10rpx;
}

.d_product .btnBox {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 90px;
    height: 100%;
}

.d_product .btnBox .call {
    top: 20rpx;
}

.btnBox .zan-btn {
    width: 175rpx;
    padding: 0px !important;
    margin: 0;
}

.btnBox .share {
    color: #2d78f4;
    top: 50%;
    margin-top: -15px;
}

.btnBox .btn3 {
    bottom: 20rpx;
}

.ewmCover {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
}

.ewmBox {
    width: 540rpx;
    position: absolute;
    padding: 30rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    border-radius: 4rpx;
}

.ewmBox .image {
    width: 450rpx;
    height: 600rpx;
    display: block;
    margin: 0 auto;
    margin-top: 30rpx;
    padding-bottom: 30rpx;
}

.ewmBox  text {
    font-size: 28rpx;
    text-align: center;
    display: block;
    line-height: 40rpx;
    color: #ff503f;
    font-weight: bold;
}


.giftCover{
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.95);
}
.giftCover .gift_box{
    width: 620rpx;
    height: 1000rpx;
    position: absolute;
    left: 50%;
    margin-left: -310rpx;
    top: 50%;
    background: #fff;
    transform: translateY(-50%);
}
.gift_box .head{
    font-size: 28rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 1px #dedede solid;
}
.giftCover scroll-view{
    height: 910rpx;
}
.giftCover .endtxt{
    font-size: 28rpx;
    text-align: center;
    color: #4a4a4a;
    display: block;
    line-height: 50rpx;
}
.gift_box .head text{
    float: right;
    padding: 0 30rpx;
    line-height: 80rpx;
    display: block;
}
.gift_item {
    border-bottom: 1px #dedede solid;
}
.gift_item .gift_left{
    height: 120rpx;
    width: 120rpx;
    float: left;
    overflow: hidden;
}
.gift_left image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    display: block;
    margin: 15rpx auto 0;
}
.gift_left text{
    text-align: center;
    font-size:26rpx;
    display: block;
    margin: 0 auto;
}
.gift_item .gift_center{
    padding: 30rpx 0 0 20rpx;
    width: 280rpx;
    font-size: 28rpx;
    float: left;
}
.gift_center .main_txt{
    font-size: 28rpx;

}
.gift_center .strong_txt{
    font-weight: bold;
}
.gift_center .time{
    font-size: 24rpx;
    color: #4a4a4a;
}
.gift_item .gift_right{
    width: 200rpx;
    float: left;
    line-height: 120rpx;
    text-align: center;
    color: #ff563f;
    font-size: 30rpx;
}