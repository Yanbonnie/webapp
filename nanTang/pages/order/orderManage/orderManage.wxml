<!--订单管理.wxml-->
<view class='orderManage'>
    <view class='manage'>
        <view class='nav'>
            <view>
                <image src="/assets/images/wait.png"></image>
                <text>待处理</text>
            </view>
            <view>
                <image src="/assets/images/send.png"></image>
                <text>发送中</text>
            </view>
            <view>
                <image src="/assets/images/finish.png"></image>
                <text>已完成</text>
            </view>
            <view class="active">
                <image src="/assets/images/all_on.png"></image>
                <text>全部</text>
            </view>
        </view>
        <view class='listBox'>
            <view class='orderList'>
                <scroll-view scroll-y="true" style='height:100%;'>
                    
                    <view class='flexBox'>
                        <view class='flexL'>
                            <image src="/assets/images/picture.jpg"></image>
                        </view>
                        <view class='flexR'>
                            <view class='mainTxt'>
                                <text>店名</text>
                                <text class='psz'>派送中</text>
                            </view>
                            <view>下单时间：2018-03-25 12:35:59</view>
                        </view>
                    </view>
                    <view class='flexBox'>
                        <view class='flexL'>
                            <image src="/assets/images/picture.jpg"></image>
                        </view>
                        <view class='flexR'>
                            <view class='mainTxt'>
                                <text>店名</text>
                                <text class='refuse'>已拒绝</text>
                            </view>
                            <view>下单时间：2018-03-25 12:35:59</view>
                        </view>
                    </view>
                    <view class='flexBox'>
                        <view class='flexL'>
                            <image src="/assets/images/picture.jpg"></image>
                        </view>
                        <view class='flexR'>
                            <view class='mainTxt'>
                                <text>店名</text>
                                <text class='finish'>已完成</text>
                            </view>
                            <view>下单时间：2018-03-25 12:35:59</view>
                        </view>
                    </view>
                    <view class='flexBox' wx:for="{{[1,2,3,4,5,6,7,8]}}" wx:key="{{index}}">
                        <view class='flexL'>
                            <image src="/assets/images/picture.jpg"></image>
                        </view>
                        <view class='flexR'>
                            <view class='mainTxt'>
                                <text>店名</text>
                                <text class='wait'>待接单</text>
                            </view>
                            <view>下单时间：2018-03-25 12:35:59</view>
                        </view>
                    </view>
                </scroll-view>
            </view>
        </view>
    </view>
</view>