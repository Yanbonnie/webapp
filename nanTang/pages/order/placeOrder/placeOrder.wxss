/* pages/order/placeOrder/placeOrder.wxss */

page {
    height: 100%;
}

.placeOrder {
    display: flex;
    height: 100%;
    flex-direction: column;
}

.info {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #505050;
    color: #fff;
}

.info .info_l {
    width: 120rpx;
}

.info .info_l image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    display: block;
}

.info .info_c {
    flex-grow: 1;
}

.info .info_c view {
    padding: 10rpx 0;
}

.info .info_c text {
    border: 1px #fff solid;
    height: 40rpx;
    color: #505050;
    background: #fff;
    border-radius: 8rpx;
    display: inline-block;
    padding: 0 10rpx;
    font-size: 24rpx;
    line-height: 40rpx;
}

.info .info_r {
    width: 180rpx;
}

.info .viewBtn {
    border: 1px #fff solid;
    color: #fff;
}

.info .viewBtn:nth-child(1) {
    margin-bottom: 30rpx;
}

.goodsBox {
    flex-grow: 1;
    position: relative;
    background: #fff;
}

.goodsList {
    height: 100%;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goodsList .goodsLeft {
    width: 180rpx;
    height: 100%;
    background: #f1f1f1;
}

.goodsList .goodsRight {
    flex-grow: 1;
    height: 100%;
}

.goodsLeft .item1 {
    padding: 0 20rpx;
    position: relative;
    color: #666;
}

.goodsLeft .item2 {
    /* border-bottom: 1px #ccc dashed; */
    padding: 20rpx 0;
}

.goodsLeft text {
    line-height: 40rpx;
}

.goodsLeft .active {
    background: #fff;
}

.goodsLeft .active .item2 {
    border-bottom: 1px #fff solid;
}

